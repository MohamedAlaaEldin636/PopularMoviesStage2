<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables"
    android:background="@drawable/refresh_internet_connection_text_selector">

    <ImageView
        android:id="@+id/movieTrailerImageView"
        android:layout_width="80dp"
        android:layout_height="match_parent"

        android:contentDescription="@string/play_movie_trailer"

        android:src="@drawable/ic_play_circle_outline_black_24dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/movieTrailerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:text="Movie Trailer"
        android:gravity="center_vertical"
        android:layout_margin="8dp"

        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="24sp"
        android:maxLines="1"
        android:ellipsize="end"

        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</LinearLayout>